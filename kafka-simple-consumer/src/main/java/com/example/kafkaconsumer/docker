FROM ubuntu:22.04


USER root
RUN useradd -r -u 6001 -s /bin/bash appusr

RUN apt-get update
RUN apt-get install -y --no-install-recommends openjdk-17-jre-headless tzdata ca-certificates curl wget
ENV JAVA_HOME /usr/lib/jvm/java-17-openjdk-amd64



ARG PASSWORD
ARG USERNAME
ARG BUILD_TAG
ARG JAVA_OPTS

RUN mkdir -p /apps/webapps

RUN chown -R appusr:appusr /apps

RUN apt-get update && \
    apt-get install -y --no-install-recommends wget curl ca-certificates && \
    wget -O /etc/apt/keyrings/amazoncorretto.rsa.pub https://apt.corretto.aws/amazoncorretto.rsa.pub && \
    echo "https://apt.corretto.aws/" >> /etc/apt/repositories && \
    apt-get update && \
    apt-get install -y amazon-corretto-17 && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*